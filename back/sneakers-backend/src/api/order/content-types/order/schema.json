{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "order_number": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "email": {
      "type": "email",
      "required": true
    },
    "statut": {
      "type": "enumeration",
      "default": "pending",
      "enum": [
        "pending",
        "paid",
        "preparing",
        "shipped",
        "delivered",
        "cancelled"
      ]
    },
    "total_amount": {
      "type": "decimal",
      "required": true
    },
    "shipping_cost": {
      "type": "decimal",
      "default": 0
    },
    "tax_amount": {
      "type": "decimal",
      "default": 0
    },
    "stripe_payment_intent_id": {
      "type": "string"
    },
    "stripe_payment_status": {
      "type": "string"
    },
    "shipping_address": {
      "type": "json"
    },
    "billing_address": {
      "type": "json"
    },
    "notes": {
      "type": "text"
    },
    "tracking_number": {
      "type": "string"
    },
    "shipped_at": {
      "type": "datetime"
    },
    "delivered_at": {
      "type": "datetime"
    },
    "items": {
      "type": "component",
      "component": "order-item.order-item",
      "repeatable": true
    }
  }
}
